<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TRAPP"
             x:Class="TRAPP.MainPage">
    <StackLayout  VerticalOptions="Center" Margin="20">
        <Entry x:Name="entEmail" Placeholder="Enter Email" Keyboard="Email"/>
        <Entry x:Name="entPass" Placeholder="Enter Password" IsPassword="True"/>
        <Button Text="Log in"  x:Name="btnLogin" Clicked="btnLogin_Clicked"  Margin="0,25,0,0" Style="{StaticResource normalBtn}"/>
    </StackLayout>
    

</ContentPage>
